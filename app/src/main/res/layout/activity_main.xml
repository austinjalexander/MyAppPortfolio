<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.thebigapple.myappportfolio.MainActivity">

    <Button
        android:text="Stock Hawk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:id="@+id/button2"
        android:textAlignment="center"
        android:layout_below="@+id/button1"
        android:layout_centerHorizontal="true"
        android:layout_alignRight="@+id/heading"
        android:layout_alignEnd="@+id/heading"
        android:layout_alignLeft="@+id/heading"
        android:layout_alignStart="@+id/heading" />

    <Button
        android:text="Make Your App Material"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:id="@+id/button3"
        android:textAlignment="center"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_alignRight="@+id/heading"
        android:layout_alignEnd="@+id/heading"
        android:layout_alignLeft="@+id/heading"
        android:layout_alignStart="@+id/heading" />

    <Button
        android:text="Build It Bigger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:id="@+id/button4"
        android:textAlignment="center"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:layout_alignRight="@+id/heading"
        android:layout_alignEnd="@+id/heading"
        android:layout_alignLeft="@+id/heading"
        android:layout_alignStart="@+id/heading" />

    <Button
        android:text="Go Ubiquitous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:id="@+id/button5"
        android:textAlignment="center"
        android:layout_below="@+id/button4"
        android:layout_centerHorizontal="true"
        android:layout_alignRight="@+id/heading"
        android:layout_alignEnd="@+id/heading"
        android:layout_alignLeft="@+id/heading"
        android:layout_alignStart="@+id/heading" />

    <Button
        android:text="Capstone: My Own App"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:id="@+id/button6"
        android:textAlignment="center"
        android:background="@android:color/holo_red_dark"
        android:layout_below="@+id/button5"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignStart="@+id/button5"
        android:layout_marginTop="28dp"
        android:layout_alignRight="@+id/button5"
        android:layout_alignEnd="@+id/button5"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Nanodegree Apps"
        android:textSize="24sp"
        android:textAlignment="center"
        android:id="@+id/heading"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:text="Popular Movies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textAlignment="center"
        android:id="@+id/button1"
        android:layout_below="@+id/heading"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2" />

</RelativeLayout>
